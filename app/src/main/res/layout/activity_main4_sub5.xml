<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main4_sub5"
        android:background="@color/main3_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:background="@color/main3_background">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center">

                <TextView android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:text="正在生成体态评估报告..."
                          android:textColor="#FFF"
                          android:textSize="30sp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
                android:id="@+id/countdown"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:visibility="visible"
                android:paddingBottom="150dp">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center">


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center">
                    <TextView
                            android:id="@+id/countTextView"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="10%"
                            android:textColor="#FFF"
                            android:textSize="40dp">
                    </TextView>
                </LinearLayout>

                <RelativeLayout
                        android:id="@+id/process"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_centerInParent="true">

                    <ProgressBar
                            android:id="@+id/customProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:indeterminate="false"
                            android:max="60"
                            android:progress="0"
                            android:progressDrawable="@drawable/main4_sub2_progress_bar"/>


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

        </LinearLayout>

    </LinearLayout>


    <!--结束测试-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >
        <TextView
                android:id="@+id/main4_sub5_exist"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:paddingTop="4dp"
                android:gravity="center"
                android:background="@drawable/btn_main5_sub_over"
                android:text="结束测试"
                android:textColor="#fff"
                android:textSize="8dp"
                android:drawableTop="@drawable/main5_sub1_1_exist_wid"/>
    </RelativeLayout>

</RelativeLayout>