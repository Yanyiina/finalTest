<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main6_sub3_1"
    android:orientation="vertical"
    android:background="@color/video">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">


        <!--准备框-->
        <RelativeLayout
            android:id="@+id/main6_sub3_front"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >
                <!--提示框-->
                <LinearLayout
                    android:layout_width="1000dp"
                    android:layout_height="625dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="80dp"
                    android:paddingLeft="90dp"
                    android:paddingBottom="50dp"
                    android:background="@drawable/main5_sub1_1_sel_wid"
                    >
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="开始前准备"
                        android:textColor="#b3ffffff"
                        android:textSize="50dp"
                        android:layout_marginBottom="40dp"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="90dp"
                        android:text="垂直纵跳可以评估你的平衡性,请做好准备，3秒倒计时结束后开始评估。"
                        android:textColor="#b3ffffff"
                        android:textSize="40dp"/>
                    <!--小人图标-->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="50dp"
                            android:drawableRight="@drawable/tu3_wid"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>

                </LinearLayout>

                <!--跳过按钮-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="80dp">
                    <Button
                        android:id="@+id/main6_sub3_1_start"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:background="@drawable/main5_btn_tiaoguo"
                        android:text="跳过"
                        android:textColor="#99ffffff"
                        android:textSize="35dp"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>



        <!--显示页面-->
        <RelativeLayout
            android:id="@+id/main6_sub3_behind"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="30dp">
                <!--标题栏-->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="垂直纵跳"
                        android:gravity="center"
                        android:textSize="60dp"
                        android:background="#00000000"
                        android:textColor="#fff"/>
                </RelativeLayout>

                <!--倒计栏-->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_marginTop="-60dp">
                    <TextView
                        android:id="@+id/main6_sub3_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="#fff"
                        android:textSize="220dp"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <!--真人指导视频-->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:gravity="center_horizontal">

                    <VideoView
                        android:id="@+id/main6_sub3_1_videoView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>



            </LinearLayout>
        </RelativeLayout>


        <!--结束测试-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <View
                android:id="@+id/view"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/main6_sub3_1_exist"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:background="@drawable/btn_main5_sub_over"
                android:text="结束测试"
                android:textColor="#99ffffff"
                android:layout_below="@+id/view"
                android:textSize="20dp"
                android:drawableTop="@drawable/main5_sub1_1_exist_wid"/>
        </RelativeLayout>






    </RelativeLayout>

</LinearLayout>