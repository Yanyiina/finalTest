<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_set"
    android:background="@color/main_background"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="30dp">

            <!--标题栏-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:gravity="center"
                    android:textSize="60dp"
                    android:background="#00000000"
                    android:textColor="#fff"/>
            </RelativeLayout>

            <!--中间栏-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="17"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/color_main_set"
                    android:layout_marginBottom="20dp"
                    android:paddingRight="40dp"
                    android:paddingLeft="40dp"
                    android:text="    网络状态"
                    android:textSize="45dp"
                    android:textColor="@color/one"
                    android:drawableLeft="@drawable/set_wifi"
                    android:drawableRight="@drawable/name_arr_wid_big"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/color_main_set"
                    android:layout_marginBottom="20dp"
                    android:paddingRight="40dp"
                    android:paddingLeft="40dp"
                    android:text="    通用设置"
                    android:textSize="45dp"
                    android:textColor="@color/one"
                    android:drawableLeft="@drawable/set_set"
                    android:drawableRight="@drawable/name_arr_wid_big"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/color_main_set"
                    android:layout_marginBottom="20dp"
                    android:paddingRight="40dp"
                    android:paddingLeft="40dp"
                    android:text="    设备信息"
                    android:textSize="45dp"
                    android:textColor="@color/one"
                    android:drawableLeft="@drawable/set_message"
                    android:drawableRight="@drawable/name_arr_wid_big"/>





            </LinearLayout>


            <!--返回-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingTop="10dp"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="bottom"
                    >
                    <!--退出按钮-->
                    <Button
                        android:id="@+id/main_setup_back"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_back"
                        android:drawableTop="@drawable/main4_back_wid"
                        android:paddingTop="8dp"
                        android:text="返回"
                        android:textColor="#fff"
                        android:textSize="30dp" />
                    <!--非学员按钮-->
                    <View
                        android:id="@+id/main4_start"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="9"
                        android:layout_toRightOf="@id/main4_btn_back"
                        />
                </LinearLayout>
            </RelativeLayout>





        </LinearLayout>

    </RelativeLayout>






</LinearLayout>