<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main5_sub5_3"
    android:orientation="vertical"
    android:background="@color/main_background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">


        <!--准备框-->
        <RelativeLayout
            android:id="@+id/main5_sub5_front"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >
                <!--提示框-->
                <LinearLayout
                    android:layout_width="1000dp"
                    android:layout_height="625dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="80dp"
                    android:paddingLeft="90dp"
                    android:paddingBottom="50dp"
                    android:background="@drawable/main5_sub1_1_sel_wid">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="开始前准备"
                        android:textColor="#b3ffffff"
                        android:textSize="50dp"
                        android:layout_marginBottom="40dp"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="90dp"
                        android:text="反应时评估可以评估你的平衡性,请做好准备，3秒倒计时结束后开始评估。"
                        android:textColor="#b3ffffff"
                        android:textSize="40dp"/>
                    <!--小人图标-->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="50dp"
                            android:drawableRight="@drawable/tu5_wid"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>

                </LinearLayout>

                <!--跳过按钮-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="80dp">
                    <Button
                        android:id="@+id/main5_sub5_1_start"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:background="@drawable/main5_btn_tiaoguo"
                        android:text="跳过"
                        android:textColor="#99ffffff"
                        android:textSize="35dp"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


        <!--显示页面-->
        <RelativeLayout
            android:id="@+id/main5_sub5_behind"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="invisible">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="30dp">
                <!--标题栏-->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择反应时评估"
                        android:gravity="center"
                        android:textSize="60dp"
                        android:background="#00000000"
                        android:textColor="#fff"/>
                </RelativeLayout>


                <!--倒计栏-->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:gravity="center">

                    <!--先——数字倒计时-->
                    <RelativeLayout
                        android:id="@+id/main5_sub5_num"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:layout_marginTop="-60dp"
                        android:visibility="visible">
                        <TextView
                            android:id="@+id/main5_sub5_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="#fff"
                            android:textSize="220dp"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                    <!--后——圆环倒计时-->
                    <RelativeLayout
                        android:id="@+id/main5_sub5_cir"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:visibility="invisible">
                        <!--圆环倒计时-->
                        <RelativeLayout
                            android:layout_width="840dp"
                            android:layout_height="840dp"
                            android:background="@drawable/main5_sub1_1"
                            android:layout_centerInParent="true">
                            <ProgressBar
                                android:id="@+id/main5_sub5_progressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="670dp"
                                android:layout_height="670dp"
                                android:layout_centerInParent="true"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="100"
                                android:progressDrawable="@drawable/circular_progress_bar" />
                            <!--文字部分-->
                            <RelativeLayout
                                android:layout_width="670dp"
                                android:layout_height="670dp"
                                android:orientation="vertical"
                                android:layout_centerInParent="true"
                                >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_centerInParent="true">
                                    <TextView
                                        android:id="@+id/main5_sub5_countdownText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="00:00"
                                        android:textColor="@color/three"
                                        android:textSize="40dp" />
                                    <TextView
                                        android:id="@+id/main5_sub5_elapsedTimeText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="0"
                                        android:textColor="@color/one"
                                        android:textSize="100dp"
                                        android:textStyle="bold"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="秒"
                                        android:textColor="@color/three"
                                        android:textSize="40dp" />
                                </LinearLayout>


                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>


                </RelativeLayout>


                <!--地鼠-->
                <LinearLayout
                    android:id="@+id/hole_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <!--第一排-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:gravity="center_horizontal">
                            <ImageButton
                                android:id="@+id/hole1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="18dp"
                                android:background="@drawable/main5_sub5_hole"/>
                            <ImageButton
                                android:visibility="invisible"
                                android:id="@+id/mouse1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/main5_sub5_mouse" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:gravity="center_horizontal">
                            <ImageButton
                                android:id="@+id/hole2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="18dp"
                                android:background="@drawable/main5_sub5_hole"/>
                            <ImageButton
                                android:visibility="invisible"
                                android:id="@+id/mouse2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/main5_sub5_mouse" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:gravity="center_horizontal">
                            <ImageButton
                                android:id="@+id/hole3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="18dp"
                                android:background="@drawable/main5_sub5_hole"/>
                            <ImageButton
                                android:visibility="invisible"
                                android:id="@+id/mouse3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/main5_sub5_mouse" />

                        </RelativeLayout>


                    </LinearLayout>

                    <!--第二排-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:gravity="center_horizontal">
                            <ImageButton
                                android:id="@+id/hole4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="18dp"
                                android:background="@drawable/main5_sub5_hole"/>
                            <ImageButton
                                android:visibility="invisible"
                                android:id="@+id/mouse4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/main5_sub5_mouse" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:gravity="center_horizontal">
                            <ImageButton
                                android:id="@+id/hole5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="18dp"
                                android:background="@drawable/main5_sub5_hole"/>
                            <ImageButton
                                android:visibility="invisible"
                                android:id="@+id/mouse5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/main5_sub5_mouse" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:gravity="center_horizontal">
                            <ImageButton
                                android:id="@+id/hole6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="18dp"
                                android:background="@drawable/main5_sub5_hole"/>
                            <ImageButton
                                android:visibility="invisible"
                                android:id="@+id/mouse6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/main5_sub5_mouse" />

                        </RelativeLayout>


                    </LinearLayout>

                    <!--第三排-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:gravity="center_horizontal">
                            <ImageButton
                                android:id="@+id/hole7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="18dp"
                                android:background="@drawable/main5_sub5_hole"/>
                            <ImageButton
                                android:visibility="invisible"
                                android:id="@+id/mouse7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/main5_sub5_mouse" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:gravity="center_horizontal">
                            <ImageButton
                                android:id="@+id/hole8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="18dp"
                                android:background="@drawable/main5_sub5_hole"/>
                            <ImageButton
                                android:visibility="invisible"
                                android:id="@+id/mouse8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/main5_sub5_mouse" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_margin="20dp"
                            android:gravity="center_horizontal">
                            <ImageButton
                                android:id="@+id/hole9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="18dp"
                                android:background="@drawable/main5_sub5_hole"/>
                            <ImageButton
                                android:visibility="invisible"
                                android:id="@+id/mouse9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/main5_sub5_mouse" />

                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

                <!--得分-->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/score"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="得分为0"
                        android:textSize="30dp"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>


        <!--结束测试-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <View
                android:id="@+id/view"
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/main5_sub5_3_exist"
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:background="@drawable/btn_main5_sub_over"
                android:text="结束测试"
                android:textColor="#99ffffff"
                android:layout_below="@+id/view"
                android:textSize="20dp"
                android:drawableTop="@drawable/main5_sub1_1_exist_wid"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>