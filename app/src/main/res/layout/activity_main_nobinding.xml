<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_nobinding"
    android:background="@color/main_background">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/color_background"
        android:alpha="0.2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="100dp">

        <!--上半部分-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_gravity="center_vertical">


            <ImageView
                android:id="@+id/binging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:layout_above="@+id/bind_TextView"
                android:src="@drawable/nobinging"/>

            <TextView
                android:id="@+id/bind_TextView"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="体测仪还未绑定场馆，请联系睿莱客服绑定～"
                android:textSize="18sp"
                android:textColor="#fff"/>



        </RelativeLayout>



    </LinearLayout>

    <!--结束测试-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/main6_sub6_3_exist"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:paddingTop="4dp"
            android:gravity="center"
            android:background="@drawable/btn_main5_sub_over"
            android:text="结束测试"
            android:textColor="#fff"
            android:textSize="8dp"
            android:drawableTop="@drawable/main5_sub1_1_exist_wid"/>
    </RelativeLayout>


</RelativeLayout>